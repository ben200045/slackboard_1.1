
<div class="row">
	<div class="col m4">
		
		<ul class="collection">
			<li class="collection-item">Select a Course.</li>
			<%#= render @courses %>
			<% @courses.each do |t| %>
				<li class="collection-item"><%= link_to t.course_name, course_path(id: t.id) %></li>
		    <% end %>
		</ul>
		<p><%= link_to 'New Course', new_course_path, class: 'btn' %></p>

		<ul class="collection">
		<% if @groups != nil %>
			<% for group in @groups %>
				<%= link_to(join_path) do %>
					<li class="collection-item"><%= "#{@join}" + course.course_name %></li>
				<% end %>
				<% end %>
		<% else %>
		<li class="collection-item"><p>Course Not Found</p></li>
		<% end %>
	</ul>
	</div>

    <div class="col m8">
        <h4>Your Courses.</h4>
        <h6>A summary of the courses you are currently undertaking.</h6>
        <br>
        <% @courses.each do |a| %>
            <div class="card">
	            <div class="card-content">
		            <span class="card-title"><i class="tiny material-icons">label</i> <%= a.course_name %></span>
	            </div>
	            <div class="card-action">
                    <p><%= a.course_description %></p>
                    <p class="bold"><i class="tiny material-icons">schedule</i> Start date: <%= a.course_start_date %><br><i class="tiny material-icons">schedule</i> End date: <%= a.course_end_date %></p>
	            </div>
            </div>
        <% end %>
    </div>
</div>